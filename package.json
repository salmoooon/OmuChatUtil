{
  "name": "omuchatbot",
  "version": "0.0.1",
  "description": "omuchatbot is a bBot for OmuChat using bRocket and Rocket.Chat",
  "repository": "git@github.com:salmoooon/OmuChatUtil.git",
  "author": "Kaltu <lkaxtu@gmail.com>",
  "contributors": [
    "Kaltu <lkaxtu@gmail.com>"
  ],
  "license": "MIT",
  "scripts": {
    "start": "npx tsc && NODE_ENV=production node ./dist/index.js",
    "watch": "nodemon ./dist/index.js",
    "debug": "npx tsc && node",
    "lint": "yarn lint:js"
  },
  "main": "index.ts",
  "type": "commonjs",
  "files": [
    "index.ts",
    "src"
  ],
  "private": true,
  "engines": {
    "node": "> 14.0.0",
    "npm": "> 7.0.0"
  },
  "bot": {
    "name": "omubot",
    "message-adapter": "rocketchat"
  },
  "dependencies": {
    "bbot": "^1.3.0",
    "errorhandler": "^1.5.1",
    "glob": "^7.1.6",
    "path": "^0.12.7",
    "puppeteer": "^8.0.0"
  },
  "devDependencies": {
    "@types/crawler": "^1.2.1",
    "autoprefixer": "^10.2.5",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.22.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4",
    "husky": "^5.2.0",
    "lint-staged": "^10.5.4",
    "nodemon": "^1.18.3",
    "postcss": "^8.1.0",
    "prettier": "^2.2.1",
    "stylelint": "^13.12.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^21.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.2.3"
  },
  "lint-staged": {
    "**/*.{js,jsx}": [
      "yarn pretty --",
      "git add"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "arrowParens": "avoid"
  }
}
