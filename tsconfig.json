{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2015",
    "removeComments": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {},
    "types": [
      "node"
    ]
  },
  "include": [
    "./**/*.ts",
  ]
}